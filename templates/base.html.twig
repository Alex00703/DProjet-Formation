<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8"> 
        <title>{% block title %}Silezia{% endblock %}</title>
        <link href="{{ asset('assets/css/styles.css') }}" rel="stylesheet"/>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        {% block steelsheets %}{% endblock steelsheets %}
    </head>
    <body>
        <header>
            <img src="{{ asset('assets/img/slider.png') }}" alt="slider" id="slider">
            <nav>
                <ul id="first-nav-bar">
                    <li><a href="{{ path('index') }}">ACCUEIL</a></li>
                    <li><a href="{{ path('boutique') }}">BOUTIQUE</a></li>
                    <li><a href="">VOTER</a></li>
                    <li><a href="{{ path('index') }}" class="exception"><img id="logo" src="{{ asset('assets/img/logo.png') }}" alt="logo"></a></li>
                    <li><a href="">FORUM</a></li>
                    <li><a href="">SUPPORT</a></li>
                    <li><a href="">LAUNCHER</a></li>
                </ul>
                <ul id="second-nav-bar">
                    <div id="snb-content"> {# snb == second-nav-bar #}
                        {% if app.user %}
                            <li><a href="{{ path('account') }}" class="a-second-nav">{{ app.user.userIdentifier }}</a></li>

                            <li><a href="{{ path('app_logout') }}" class="a-second-nav" style="padding: 10px 12px;"><i class="fa fa-sign-out"></i></a></li>
                        {% else %}
                            <li><a href="{{ path('app_login') }}" class="a-second-nav">CONNEXION</a></li>
                            <li><a href="{{ path('app_register') }}" class="a-second-nav">INSCRIPTION</a></li>
                        {% endif %}

                    </div>
                </ul>
            </nav>
            <div class="players">
                <p>{{ onlinePlayers }} JOUEURS</p>
            </div>
        </header>
        <footer>
            <p>© Silezia - Développé avec ❤ par <a href="https://alexdev.fr/" id="alex">Alex</a></p>
        </footer>
        {% block body %}{% endblock body %}
    </body>
</html>
